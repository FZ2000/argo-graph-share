{
  "routes": [
    {
      "method": "GET",
      "path": "/snapshots",
      "handler": "Snapshot.find",
      "config": {
        "policies": ["global::passthrough"]
      }
    },
    {
      "method": "GET",
      "path": "/snapshots/count",
      "handler": "Snapshot.count",
      "config": {
        "policies": ["plugins.users-permissions.isAuthenticated"]
      }
    },
    {
      "method": "GET",
      "path": "/snapshots/:id",
      "handler": "Snapshot.findOne",
      "config": {
        "policies": ["global::passthrough"]
      }
    },
    {
      "method": "POST",
      "path": "/snapshots",
      "handler": "Snapshot.create",
      "config": {
        "policies": ["global::passthrough"]
      }
    },
    {
      "method": "PUT",
      "path": "/snapshots/:id",
      "handler": "Snapshot.update",
      "config": {
        "policies": ["plugins.users-permissions.isAuthenticated"]
      }
    },
    {
      "method": "DELETE",
      "path": "/snapshots/:id",
      "handler": "Snapshot.delete",
      "config": {
        "policies": ["plugins.users-permissions.isAuthenticated"]
      }
    }
  ]
}
